name:          raaz-hash-sha
version:       0.0.0.0
synopsis:      Implementation of the SHA family of hashes for raaz library
homepage:      http://github.com/piyush-kurur/raaz
license:       BSD3
license-file:  LICENSE
author:        Piyush P Kurur
maintainer:    ppk@cse.iitk.ac.in
category:      Codec, Raaz
build-type:    Simple
cabal-version: >=1.9.2

bug-reports: https://github.com/piyush-kurur/raaz/issues

source-repository head
  type: git
  location: https://github.com/piyush-kurur/raaz
  subdir: raaz-hash-sha

library
  exposed-modules: Raaz.Hash.Instances
                 , Raaz.Hash.Sha
                 , Raaz.Hash.Sha.Ref.Sha1
                 , Raaz.Hash.Sha.Ref.Sha256
                 , Raaz.Hash.Sha.Ref.Sha512

  build-depends: base
               , bytestring
               , QuickCheck==2.4.*
               , raaz-primitives==0.0.0.0
               , template-haskell
  ghc-options: -Wall

test-Suite tests
  type: exitcode-stdio-1.0
  hs-source-dirs: tests
  main-is: Main.hs
  build-depends: base
               , bytestring
               , test-framework==0.6.*
               , raaz-primitives==0.0.0.0
               , raaz-hash-sha==0.0.0.0
